@model IEnumerable<Page>

@{
    ViewData["Title"] = "Alle tilbud";
}


<div class="text-center p-3">

    <!-- Spacer -->
    <div style="width:100%; height:15px;"></div>

    <h1 class="display-5">@ViewData["Title"] <span class="badge badge-secondary">@Model.Count() stk.</span></h1>
    <p class="lead">Fyldt med gratis ting, gode tilbud, spændende konkurrencer og meget mere!</p>

</div>

<div class="row p-3">

    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-6 col-lg-4">
            <div class="card mb-4 text-center shadow">

                <img src="@item.ImgUrl" class="card-img-top" alt="@item.Title">
                <div class="card-body">

                    <h3 class="card-title">@item.Title</h3>

                    <a href="@item.TargetUrl" class="btn btn-primary" target="_blank">Læs mere</a>

                </div>
            </div>
        </div>
    }

</div>