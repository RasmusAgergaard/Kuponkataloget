@model KategoriViewModel

@{
    ViewData["Title"] = Model.Tag.Title;
}

<div class="container">
    <div class="text-center p-3">

        <!-- Spacer -->
        <div style="width:100%; height:15px;"></div>

        <h1 class="display-5">@Model.Tag.Title</h1>
        @*<p class="lead">@Model.Tag.Description</p>*@

    </div>

    <div class="row p-3">

        @foreach (var item in Model.Pages)
        {
            <partial name="_KuponCardPartial" model="item" />
        }

    </div>

    <hr />

    <div class="text-center p-3">

        <h2>Alle kategorier</h2>

        @foreach (var tag in Model.AllTags)
        {

            <a href="/Kategorier/@tag.Moniker" class="btn btn-primary btn-sm m-2">@tag.Title</a>

        }

    </div>
</div>

