@page
@model LoginModel

@{
    ViewData["Title"] = "Log ind";
}

@section metatags{<meta name="robots" content="noindex">}

<div class="text-center p-3">

    <!--Spacer-->
    <div style="width:100%; height:15px;"></div>

    <h1 class="display-5">Log ind</h1>

    <div class="row d-flex justify-content-center">
        <div class="col-md-4 text-left">
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log ind</button>
                </div>
                <div class="form-group">
                    <p>
                        @*<a id="forgot-password" asp-page="./ForgotPassword">Glemt din adgangskode?</a>*@
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Opret ny bruger</a>
                    </p>
                </div>
            </form>
        </div>
    </div>

    <!--Spacer-->
    <div style="width:100%; height:50px;"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
